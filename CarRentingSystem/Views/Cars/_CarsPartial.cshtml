@model IEnumerable<CarServiceModel>

<div class="row">
    @foreach (var car in Model)
    {
        <div class="col-md-4">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="@car.ImageUrl" alt="@car.Brand @car.Model">
                <div class="card-body">
                    <h5 class="card-title">@car.Brand @car.Model</h5>
                    <a class="btn btn-primary" asp-controller="Cars" asp-action="About" asp-route-id="@car.Id">About</a>
                    @if (ViewBag.AllowCarEdit = true)
                    {
                        <a class="btn btn-warning" asp-controller="Cars" asp-action="Edit" asp-route-id="@car.Id">Edit</a>
                        <a class="btn btn-danger" asp-controller="Cars" asp-action="Delet" asp-route-id="@car.Id">Delete</a>
                    }
                </div>
            </div>
        </div>
    }
</div>